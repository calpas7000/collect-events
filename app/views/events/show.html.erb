<h2><%= @event.title %></h2>
<p><%= @event.event_date %></p>
<p><%= @event.place %></p>
<div class="row">
  <p>コメント：</p>
  <p>お気に入り：</p>
  <%= render "favorites/favorite_button", event: @event %>
  <% if current_user == @event.user %>
    <%= link_to "イベントを削除", @event, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm btn-group' %>
  <% end %>
</div>
<div class="row">
  <aside class="col-sm-2">
    <img class="rounded img-fluide" src="<%= gravatar_url(@event.user, { size: 75 }) %>" alt="">
  </aside>
  <div class="col-sm-10">
    <p><%= @event.user.name %></p>
    <p><%= @event.created_at %></p>
  </div>
</div>
<div class="row">
  <p><%= @event.content %></p>
</div>