<ul class="list-unstyled nav nav-pulls">
  <% events.each do |event| %>
    <li class="mb-3 col-sm-4">
      <a href="<%= event_path(event) %>" class="card">
        <div class="card-header">
          <h3 class="card-title">
            <%= event.title %>
            <% if event.title.empty? %>
              No Title
            <% end %>
          </h3>
        </div>
        <div class="card-body">
          <table class="table">
            <tr>
              <td>開催日： </td>
              <td><%= event.event_date %></td>
            </tr>
            <tr>
              <td>Platform： </td>
              <td>
                <% if event.pc == true %>
                  pc
                <% end %>
                <% if event.ps4 == true %>
                  ps4
                <% end %>
                <% if event.ps5 == true %>
                  ps5
                <% end %>
                <% if event.xbox_one == true %>
                  xbox_one
                <% end %>
                <% if event.xbox_series_xs == true %>
                  xbox_series_xs
                <% end %>
                <% if event.switch == true %>
                  switch
                <% end %>
                <% if event.smartphone == true %>
                  smartphone
                <% end %>
                <% if event.other == true %>
                  other
                <% end %>
              </td>
            </tr>
            <tr>
              <td>Game： </td>
              <td><%= event.game_title %></td>
            </tr>
            <tr>
              <td>Entry： </td>
              <td>
                <% if event.entry&.include?("http") %>
                  <%= raw Rinku.auto_link(h(event.entry)).truncate(125, separator: /\R/) %>
                <% else %>
                  <%= raw Rinku.auto_link(h(event.entry)).truncate(50, separator: /\R/) %>
                <% end %>
              </td>
            </tr>
          </table>
          <div>
            <h6 class="text-center">詳細</h6>
            <div>
              <table>
                <td><%= raw Rinku.auto_link(h(event.content.truncate(100, omission: " ..."))) %></td>
              </table>
            </div>
          </div>
          <div class="row">
            <p class="ml-4"><i class="fas fa-comment-dots"></i> <%= event.comments.count %></p>
            <p class="ml-4"><i class="fas fa-heart"></i> <%= event.favorites.count %></p>
          </div>
          <div class="">
            <p class="text-muted text-right">作成日： <%= event.created_at %></p>
          </div>
        </div>
      </a>
    </li>
  <% end %>
</ul>
